{
    "name": "jiraux",
    "displayName": "JirAux",
    "description": "Extension to list,view and create Git-flow like branches from issues",
    "version": "1.0.4",
    "author": "Semih Onay",
    "publisher": "SemihOnay",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "assets/icons/logo.png",
    "homepage": "https://github.com/Semyonic/jira-aux/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/Semyonic/jira-aux/issues",
        "email": "semih.onay@bilgiedu.net"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Semyonic/jira-aux"
    },
    "license": "MIT",
    "keywords": [
        "jira",
        "issues",
        "bugs"
    ],
    "activationEvents": [
        "onView:JirAux"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "JirAux",
                    "title": "Issues",
                    "icon": "assets/icons/issues.svg"
                }
            ]
        },
        "views": {
            "JirAux": [
                {
                    "id": "JirAux",
                    "name": ""
                }
            ]
        },
        "commands": [
            {
                "command": "JirAux.showDescription",
                "title": "Show Issue Details"
            },
            {
                "command": "JirAux.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "assets/icons/light/refresh.svg",
                    "dark": "assets/icons/dark/refresh.svg"
                }
            },
            {
                "command": "JirAux.openIssue",
                "title": "Open Issue"
            },
            {
                "command": "JirAux.createBranch",
                "title": "Create Branch"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "JirAux.showDescription",
                    "when": "false"
                },
                {
                    "command": "JirAux.refresh",
                    "when": "false"
                },
                {
                    "command": "JirAux.openIssue",
                    "when": "false"
                },
                {
                    "command": "JirAux.createBranch",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "JirAux.refresh",
                    "when": "view == JirAux",
                    "group": "navigation"
                }
            ],
            "view/item": [
                {
                    "command": "JirAux.showDescription",
                    "when": "view == JirAux && viewItem == issue",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "JirAux.openIssue",
                    "when": "view == JirAux && viewItem == issue",
                    "group": "navigation"
                },
                {
                    "command": "JirAux.showDescription",
                    "when": "view == JirAux && viewItem == issue",
                    "group": "navigation"
                },
                {
                    "command": "JirAux.createBranch",
                    "when": "view == JirAux && viewItem == issue",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Jira configuration",
            "properties": {
                "jira.baseUrl": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "",
                    "description": "JIRA installation URL. Ex: https://jira.your-company.com"
                },
                "jira.port": {
                    "type": [
                        "number",
                        "null"
                    ],
                    "default": 443,
                    "description": "Port number"
                },
                "jira.username": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "",
                    "description": "JIRA username"
                },
                "jira.password": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "",
                    "description": "JIRA password"
                },
                "jira.poll": {
                    "type": [
                        "number",
                        "null"
                    ],
                    "default": 1800000,
                    "minimum": 600000,
                    "description": "Polling frequency in miliseconds"
                },
                "jira.jqlExpression": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "assignee = currentUser() AND resolution = EMPTY ORDER BY Rank ASC",
                    "description": "Your custom JQL expression"
                },
                "jira.issueTypes": {
                    "properties": {
                        "bugs": {
                            "type": "array",
                            "description": "List of BUG names",
                            "uniqueItems": true,
                            "maxItems": 10,
                            "default": [
                                "Bug",
                                "Defect",
                                "Sub-Bug"
                            ]
                        },
                        "issues": {
                            "type": "array",
                            "description": "List of TASK names",
                            "uniqueItems": true,
                            "maxItems": 10,
                            "default": [
                                "Task",
                                "To-Do",
                                "Sub-Task"
                            ]
                        }
                    },
                    "description": "Custom issue and bug names",
                    "default": {}
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "yarn run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.10",
        "@types/open": "^6.1.0",
        "@types/prettier": "^1.16.4",
        "prettier": "^1.18.2",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.5.2",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "jira-client": "^6.8.0",
        "open": "^6.3.0"
    }
}
